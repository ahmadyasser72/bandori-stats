---
import "~/styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />

		<link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<meta name="apple-mobile-web-app-title" content="bandori-stats" />
		<link rel="manifest" href="/site.webmanifest" />

		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>bandori-stats &bullet; {title}</title>
	</head>
	<body>
		<div class="container mx-auto flex h-screen flex-col py-2">
			<main hx-indicator="#app-loader" class="relative flex-1 shadow-sm">
				<slot />
			</main>
		</div>

		<div
			id="app-loader"
			class="htmx-indicator bg-base-100/50 fixed inset-0 z-20"
		>
			<iconify-icon
				icon="svg-spinners:bars-scale-fade"
				width="none"
				class="center absolute size-24"></iconify-icon>
		</div>
	</body>
</html>

<script>
	import htmx from "htmx.org";

	import { useLineChart } from "~/lib/chart";

	htmx.onLoad((node) => {
		if (!(node instanceof HTMLElement)) return;

		if (node instanceof HTMLDialogElement) {
			node.show();
			node.addEventListener("close", () => {
				node.addEventListener("transitionend", () => node.remove());
			});
		} else if (
			node instanceof HTMLImageElement &&
			node.classList.contains("skeleton") &&
			node.classList.contains("border")
		) {
			const image = node;
			const done = () => image.classList.remove("skeleton", "border");
			if (image.complete) done();
			else image.addEventListener("load", done, { once: true });
		}
	});

	htmx.on("htmx:afterProcessNode", async (e) => {
		const event = e as Event & { detail: { elt: HTMLElement } };
		const canvas = event.detail.elt.querySelector("canvas[data-line-chart]");
		if (!(canvas instanceof HTMLCanvasElement)) return;

		await useLineChart(canvas, JSON.parse(canvas.dataset.lineChart!));
	});

	htmx.on("htmx:beforeSwap", (e) => {
		const event = e as Event & {
			detail: {
				elt: HTMLElement;
				serverResponse: string;
				target: HTMLElement;
				swapOverride: string;
			};
		};

		if (
			event.detail.serverResponse.startsWith("<dialog") &&
			event.detail.elt instanceof HTMLButtonElement
		) {
			event.detail.target = document.body;
			event.detail.swapOverride = "beforeend";
		}
	});
</script>
<script src="iconify-icon"></script>
