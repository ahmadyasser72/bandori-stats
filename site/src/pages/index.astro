---
import BaseLayout from "~/layouts/base-layout.astro";

export const prerender = true;
---

<BaseLayout title="Homepage">
	<div class="absolute inset-0 flex flex-col justify-center gap-2 text-center">
		<h1 class="font-medium">bandori-stats</h1>

		<div
			hx-boost="true"
			class="flex flex-wrap justify-center gap-y-1 divide-x *:px-4"
		>
			<a href="/leaderboard" class="link">Leaderboard</a>
			<a href="/history" class="link">History</a>

			<a
				href="https://github.com/ahmadyasser72/bandori-stats"
				target="_blank"
				rel="noopener noreferrer"
				class="link inline-flex items-center gap-2"
			>
				Source code
				<iconify-icon icon="line-md:github-loop" width="20"></iconify-icon>
			</a>
			<a
				href="/discord/invite"
				target="_blank"
				rel="noopener noreferrer"
				class="link inline-flex items-center gap-2"
			>
				Discord bot
				<iconify-icon icon="line-md:discord" width="20"></iconify-icon>
			</a>
		</div>
	</div>
</BaseLayout>
